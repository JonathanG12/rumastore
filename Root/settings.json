{
    "templates": {
        "shop": {
            "layout": "master",
            "components": {
                "hero": {
                    "type": "hero",
                    "properties": {
                        "title": "Welcome to <span class=\"text-accent-500\">{{ shop.name }}</span>!",
                        "subtitle": "{{ shop.description }}",
                        "show_searchbar": true,
                        "buttons": [
                            {
                                "text": "View Products",
                                "icon": "fas fa-shopping-cart",
                                "link": "#products",
                                "new_tab": false,
                                "style": "outline"
                            }
                        ],
                        "alignment": "center",
                        "height": "short",
                        "text_width": "medium",
                        "side_image": null
                    }
                },
                "stats": {
                    "type": "stats",
                    "properties": {
                        "title": ""
                    }
                },
                "products": {
                    "type": "products",
                    "properties": {
                        "title": null,
                        "show_searchbar": false,
                        "ids": []
                    }
                },
                "features": {
                    "type": "features",
                    "properties": {
                        "title": null,
                        "subtitle": null,
                        "features": [
                            {
                                "title": "Instant Delivery",
                                "description": "We provide instant delivery for all of our producs to ensure the best experience for our customers.",
                                "icon": "fas fa-truck"
                            },
                            {
                                "title": "Secure Payments",
                                "description": "We use the latest technology to ensure that your payments are secure and your data is safe.",
                                "icon": "fas fa-shield"
                            },
                            {
                                "title": "24\/7 Support",
                                "description": "Our support team is available 24\/7 to help you with any questions or issues you might have.",
                                "icon": "fas fa-clock"
                            },
                            {
                                "title": "Huge Selection",
                                "description": "We offer a huge selection of products to ensure that you can find exactly what you need.",
                                "icon": "fas fa-box"
                            }
                        ]
                    }
                }
            },
            "components_order": [
                "hero",
                "stats",
                "products",
                "features"
            ]
        },
        "product": {
            "layout": "master",
            "components": {
                "product-page": {
                    "type": "product-page",
                    "properties": {
                        "variant_selector": "dropdown",
                        "show_feedbacks": true,
                        "feedbacks_amount": 4
                    }
                }
            },
            "components_order": [
                "product-page"
            ]
        },
        "feedback": {
            "layout": "master",
            "components": {
                "feedbacks": {
                    "type": "feedbacks",
                    "properties": {
                        "title": "Customer Reviews",
                        "amount": null
                    }
                }
            },
            "components_order": [
                "feedbacks"
            ]
        },
        "terms": {
            "layout": "master",
            "components": {
                "terms-page": {
                    "type": "terms-page",
                    "properties": []
                }
            },
            "components_order": [
                "terms-page"
            ]
        },
        "status": {
            "layout": "master",
            "components": {
                "status-page": {
                    "type": "status-page",
                    "properties": []
                }
            },
            "components_order": [
                "status-page"
            ]
        },
        "embed-product": {
            "layout": "embed"
        }
    },
    "global": {
        "properties": {
            "accent_color": "#6571ff",
            "background_color": "#06060c",
            "card_color": "#0b0b11",
            "text_primary_color": "#ffffff",
            "text_accent_color": "#ffffff",
            "font": "Play",
            "snow": false
        },
        "components": {
            "announcement": {
                "announcements": [
                    {
                        "text": "\ud83d\udca5 New Products Available Now!",
                        "link": null,
                        "new_tab": false
                    },
                    {
                        "text": "\ud83d\udd25 Check Our Limited Time Offers!",
                        "link": null,
                        "new_tab": false
                    },
                    {
                        "text": "\u231b What Are You Waiting For? Purchase Now!",
                        "link": null,
                        "new_tab": false
                    }
                ]
            },
            "navbar": {
                "show_shop_name": false,
                "show_logo": true,
                "links": [
                    {
                        "text": "Home",
                        "link": "\/",
                        "shape": "regular"
                    },
                    {
                        "text": "Products",
                        "link": "\/#products",
                        "shape": "regular"
                    },
                    {
                        "text": "Reviews",
                        "link": "\/feedback",
                        "shape": "regular"
                    },
                    {
                        "text": "Status",
                        "link": "\/status",
                        "shape": "regular"
                    },
                    {
                        "text": "Customer Panel",
                        "link": "\/customer",
                        "shape": "button"
                    }
                ]
            },
            "footer": {
                "show_shop_name": true,
                "show_logo": false,
                "show_socials": true,
                "copyright": "Copyright \u00a9 {{ shop.name }} {{ '' | currentYear }}",
                "links": [
                    {
                        "text": "Terms of Service",
                        "link": "\/terms"
                    }
                ]
            }
        }
    }
}